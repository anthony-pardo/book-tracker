<link href="<%= url('/stylesheets/bookshelf.css') %>" rel="stylesheet" type="text/css" />
<% if logged_in? %>
<h1>Welcome to your Bookshelf, <%=current_user.username%></h1>

<h4>Your Books are:</h4>
<ul>
  <%current_user.books.each do |book|%>
  <li><%=book.title%> by <%=book.author%> which you have a rating of <%=book.rating%> 
    <form action="/books/<%=book.id%>" class="inline">
      <input type="submit" value="Show Book Details" />
    </form>
    <form action="/books/<%=book.id%>/edit" class="inline">
      <input type="submit" value="Edit Book" />
    </form>
    <form action="/books/<%= book.id %>" method="post" class="inline">
      <input id="hidden" type="hidden" name="_method" value="delete">
      <button name="delete" value="Delete Book">Delete Book</button>
    </form>
  </li>
  <%end%>
</ul>

<form action="/books/new">
  <input type="submit" value="Add a New Book to your Bookshelf" />
</form>
<form action="/logout">
  <input type="submit" value="Log Out" />
</form>
<% end %>

