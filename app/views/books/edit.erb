<% if logged_in? and @book.user == current_user%>
<h1>Update Book</h1>

<h2>Edits for <%= @book.title %></h2>
 
  <form action="/books/<%= @book.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label>Edit the Book's Title:</label>
    <input type="text" name="title" value="<%= @book.title %>"><br><br>
    <label>Edit the Book's Author:</label>
    <input type="text" name="author" value="<%= @book.author %>"><br><br>
    <label>Edit the Book's Rating:</label>
    <input type="number" name="rating" value="<%= @book.rating %>"><br><br>

 
    <button type="submit" value="Update Book">Update Book</button>
  </form>

<% else %>
<h1>Sorry You can't access this page</h1>
<% end %>